<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomSafeArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/bottomSafeArea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/navDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorOutline" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorSurface"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/colorOutline"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp">

                <LinearLayout
                    android:id="@+id/tabMessages"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/ivMessages"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_nav_inbox"
                        app:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tvMessages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Inbox"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabDashboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/ivDashboard"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_nav_insights"
                        app:tint="@color/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tvDashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Radar"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurfaceVariant" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/ivSettings"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_nav_settings"
                        app:tint="@color/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tvSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Settings"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSurfaceVariant" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
